@page
@model Server.Pages.Admin.Roles.IndexModel

@{
	@if (Model.ViewModel == null)
	{
		return;
	}

	var pageTitle =
		$"{Resources.DataDictionary.ListOf} {Resources.DataDictionary.Roles}";

	ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;
}

@Html.DtatDisplayPageHeader(title: pageTitle)

<div class="@(Infrastructure.CssClasses.ListActionsDivRow)">
	<div class="@(Infrastructure.CssClasses.ListActionsDivCol)">
		<a asp-page="Create" class="@(Infrastructure.CssClasses.ListActionsLink)">
			@(Html.DtatDisplayIconCreate())
			@(Resources.ButtonCaptions.Create)
		</a>
	</div>
</div>

<hr class="@(Infrastructure.CssClasses.HorizontalRule)" />

<div class="@(Infrastructure.CssClasses.ListTableDivRow)">
	<div class="@(Infrastructure.CssClasses.ListTableDivCol)">
		<table class="@(Infrastructure.CssClasses.ListTable)">

			<caption>
				@(pageTitle)
			</caption>

			<thead class="@(Infrastructure.CssClasses.ListTableHeader)">
				<tr>
					<th>
						#
					</th>
					<th>
					</th>
					<th>
						@(Html.DisplayNameFor(model => model.ViewModel[0].Name))
					</th>
					<th>
						@(Html.DisplayNameFor(model => model.ViewModel[0].IsActive))
					</th>
					<th>
						@(Html.DisplayNameFor(model => model.ViewModel[0].Ordering))
					</th>
					<th>
						@(Html.DisplayNameFor(model => model.ViewModel[0].UserCount))
					</th>
					<th>
						@(Html.DisplayNameFor(model => model.ViewModel[0].DisplayInsertDateTime))
					</th>
					<th>
						@(Html.DisplayNameFor(model => model.ViewModel[0].DisplayUpdateDateTime))
					</th>
				</tr>
			</thead>

			<tbody class="@(Infrastructure.CssClasses.ListTableBody)">
				@for (int index = 0; index <= Model.ViewModel.Count - 1; index++)
				{
					var item = Model.ViewModel[index];

					<tr>
						@(Html.DtatDisplayTdInteger(value: index + 1))

						<td class="@(Infrastructure.CssClasses.ListTableActionsTd)">
							<a asp-page="Details" asp-route-id="@(item.Id)" class="@(Infrastructure.CssClasses.ListTableActionsLink)">
								@(Html.DtatDisplayIconDetails())
							</a>
							|
							<a asp-page="Update" asp-route-id="@(item.Id)" class="@(Infrastructure.CssClasses.ListTableActionsLink)">
								@(Html.DtatDisplayIconUpdate())
							</a>
							|
							<a asp-page="Delete" asp-route-id="@(item.Id)" class="@(Infrastructure.CssClasses.ListTableActionsLink)">
								@(Html.DtatDisplayIconDelete())
							</a>
						</td>

						<td>
							@(item.Name)
						</td>

						@(Html.DtatDisplayTdBoolean(value: item.IsActive))

						@(Html.DtatDisplayTdInteger(value: item.Ordering))

						@(Html.DtatDisplayTdInteger(value: item.UserCount))

						@(Html.DtatDisplayTdDateTime(value: item.InsertDateTime))

						@(Html.DtatDisplayTdDateTime(value: item.UpdateDateTime))
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
