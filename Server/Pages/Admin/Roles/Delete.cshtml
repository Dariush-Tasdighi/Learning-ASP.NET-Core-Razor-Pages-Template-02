@page
@model Server.Pages.Admin.Roles.DeleteModel

@{
	var pageTitle =
		$"{Resources.ButtonCaptions.Delete} {Resources.DataDictionary.Role}";

	ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;
}

<section-form>
	<fieldset disabled>
		<section-form-header>
			@(pageTitle)
		</section-form-header>

		<partial name="PartialViews/_DisplayPageMessages" />

		<section-form-field>
			<label asp-for="ViewModel.Id"></label>
			<input asp-for="ViewModel.Id" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Name"></label>
			<input asp-for="ViewModel.Name" />
		</section-form-field>

		<section-form-check>
			<input asp-for="ViewModel.IsActive" />
			<label asp-for="ViewModel.IsActive"></label>
		</section-form-check>

		<section-form-field>
			<label asp-for="ViewModel.UserCount"></label>
			<input asp-for="ViewModel.UserCount" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Ordering"></label>
			<input asp-for="ViewModel.Ordering" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Description"></label>
			<textarea asp-for="ViewModel.Description"></textarea>
		</section-form-field>
	</fieldset>

	<form method="post">
		<section-form-buttons>
			<input type="hidden" asp-for="ViewModel.Id" />

			<button-delete />
		</section-form-buttons>
	</form>

	<section-form-footer>
		<a asp-page="Index">
			@(Html.DtatGetLinkCaptionForList())
		</a>
		<a asp-page="Details" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForDetails())
		</a>
		<a asp-page="Update" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForUpdate())
		</a>
	</section-form-footer>
</section-form>
