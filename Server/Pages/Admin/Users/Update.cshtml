@page
@model Server.Pages.Admin.Users.UpdateModel

@{
	var pageTitle =
		$"{Resources.DataDictionary.UpdateOf} {Resources.DataDictionary.User}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<form method="post">

	<input type="hidden" asp-for="ViewModel.Id" />

	<section-form>
		<fieldset>
			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />

			<dtat-full-input asp-for="ViewModel.EmailAddress" dir="ltr" />

			<dtat-full-checkbox asp-for="ViewModel.IsEmailAddressVerified" />

			<dtat-full-input asp-for="ViewModel.Username" dir="ltr" />

			<dtat-full-input asp-for="ViewModel.FirstName" />

			<dtat-full-input asp-for="ViewModel.LastName" />

			<dtat-full-input asp-for="ViewModel.CellPhoneNumber" dir="ltr" />

			<dtat-full-checkbox asp-for="ViewModel.IsCellPhoneNumberVerified" />

			<dtat-full-select asp-for="ViewModel.RoleId" asp-items="@(Model.RolesSelectList)" />

			<dtat-full-checkbox asp-for="ViewModel.IsVisibleInContactUsPage" />

			<dtat-full-input asp-for="ViewModel.TitleInContactUsPage" />

			<dtat-full-input asp-for="ViewModel.Ordering" />

			<dtat-full-checkbox asp-for="ViewModel.IsActive" />

			<dtat-full-checkbox asp-for="ViewModel.IsProgrammer" />

			<dtat-full-checkbox asp-for="ViewModel.IsProfilePublic" />

			<dtat-full-textarea asp-for="ViewModel.Description" />

			<dtat-full-textarea asp-for="ViewModel.AdminDescription" />
		</fieldset>

		<section-form-buttons>
			<button-save />
			<button-reset />
		</section-form-buttons>

		<section-form-footer>
			<a asp-page="Index">
				@(Html.DtatGetLinkCaptionForList())
			</a>
			<a asp-page="Details" asp-route-id="@(Model.ViewModel.Id)">
				@(Html.DtatGetLinkCaptionForDetails())
			</a>
			<a asp-page="Delete" asp-route-id="@(Model.ViewModel.Id)">
				@(Html.DtatGetLinkCaptionForDelete())
			</a>
		</section-form-footer>
	</section-form>

</form>
