@page
@model Server.Pages.Admin.Users.UpdateModel

@{
	var pageTitle =
		$"{Resources.ButtonCaptions.Update} {Resources.DataDictionary.User}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<form method="post">

	<input type="hidden" asp-for="ViewModel.Id" />

	<section-form>
		<fieldset>
			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />

			<dtat-full-input asp-for="ViewModel.EmailAddress" />

			<section-form-field>
				<label asp-for="ViewModel.RoleId"></label>

				<select class="form-select" asp-for="ViewModel.RoleId"
						asp-items="@(new SelectList(Model.RolesViewModel,
						nameof(ViewModels.Shared.KeyValueViewModel.Id),
						nameof(ViewModels.Shared.KeyValueViewModel.Name)))">

					<option value="@(null)" selected="@(Model.ViewModel.RoleId == null)">
						@(Resources.DataDictionary.WithoutRole)
					</option>
				</select>
			</section-form-field>

			<dtat-full-checkbox asp-for="ViewModel.IsProgrammer" />

			<dtat-full-input asp-for="ViewModel.Ordering" />

			<dtat-full-checkbox asp-for="ViewModel.IsActive" />

			<dtat-full-checkbox asp-for="ViewModel.IsUndeletable" />

			<dtat-full-textarea asp-for="ViewModel.AdminDescription" />
		</fieldset>

		<section-form-buttons>
			<button-save />
			<button-reset />
		</section-form-buttons>

		<section-form-footer>
			<a asp-page="Index">
				@(Html.DtatGetLinkCaptionForList())
			</a>
			<a asp-page="Details" asp-route-id="@(Model.ViewModel.Id)">
				@(Html.DtatGetLinkCaptionForDetails())
			</a>
			<a asp-page="Delete" asp-route-id="@(Model.ViewModel.Id)">
				@(Html.DtatGetLinkCaptionForDelete())
			</a>
		</section-form-footer>
	</section-form>

</form>
