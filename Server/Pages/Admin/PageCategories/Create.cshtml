@page
@model Server.Pages.Admin.PageCategorys.CreateModel

@{
	var pageTitle =
		$"{Resources.ButtonCaptions.Create} {Resources.DataDictionary.PageCategory}";

	ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;
}

<form method="post">

	<section-form>
		<fieldset>
			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />

			<section-form-field>
				<label asp-for="ViewModel.Name"></label>
				<input asp-for="ViewModel.Name" />
				<span asp-validation-for="ViewModel.Name"></span>
			</section-form-field>

			<section-form-check>
				<input asp-for="ViewModel.IsActive" />
				<label asp-for="ViewModel.IsActive"></label>
			</section-form-check>

			<section-form-field>
				<label asp-for="ViewModel.Ordering"></label>
				<input asp-for="ViewModel.Ordering" />
				<span asp-validation-for="ViewModel.Ordering"></span>
			</section-form-field>

			<section-form-field>
				<label asp-for="ViewModel.Description"></label>
				<textarea asp-for="ViewModel.Description"></textarea>
				<span asp-validation-for="ViewModel.Description"></span>
			</section-form-field>
		</fieldset>

		<section-form-buttons>
			<button-create />
			<button-reset />
		</section-form-buttons>

		<section-form-footer>
			<a asp-page="Index">
				@(Html.DtatGetLinkCaptionForList())
			</a>
		</section-form-footer>
	</section-form>

</form>
