@page
@model Server.Pages.Admin.MenuItemManager.IndexModel
@inject Infrastructure.Settings.ApplicationSettings applicationSettings

@{
	@if (Model.ViewModel == null)
	{
		return;
	}

	var pageTitle =
		Resources.PageTitles.MenuItemManagement;

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;

	if (System.Threading.Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
	{
		Layout =
			"Layouts/Rtl/_Layout";
	}
	else
	{
		Layout =
			"Layouts/Ltr/_Layout";
	}
}

<partial name="PartialViews/_DisplayPageMessages" />

<partial name="PartialViews/_DisplayMenuItems" model="Model" />
