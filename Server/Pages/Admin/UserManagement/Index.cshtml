@page
@model Server.Pages.Admin.UserManagement.IndexModel
@inject Infrastructure.Settings.ApplicationSettings applicationSettings
@{
}
<div class="container">
	<div class="row">
		<div class="col table-responsive">
			<table class="@(applicationSettings.UserManagementSettings.TableStyle)">

				<thead class="@(applicationSettings.UserManagementSettings.TableHeaderStyle)">
					<tr>
						<td>@(Resources.DataDictionary.FirstName)</td>
						<td>@(Resources.DataDictionary.LastName)</td>
						<td>@(Resources.DataDictionary.Username)</td>
						<td>@(Resources.DataDictionary.IsActive)</td>
						<td>@(Resources.DataDictionary.IsVerified)</td>
						<td>@(Resources.DataDictionary.IsDeleted)</td>
						<td>@(Resources.DataDictionary.InsertDateTime)</td>
						<td>@(Resources.DataDictionary.Action)</td>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model.ViewModel.Data)
					{
						<tr>
							<td>@item.FirstName</td>
							<td>@item.LastName</td>
							<td>@item.Username</td>
							<td><i class="@(item.IsActive ? applicationSettings.UserManagementSettings.YesIcon : applicationSettings.UserManagementSettings.NoIcon)"></i></td>
							<td><i class="@(item.IsVerified? applicationSettings.UserManagementSettings.YesIcon : applicationSettings.UserManagementSettings.NoIcon)"></i></td>
							<td><i class="@(item.IsDeleted ? applicationSettings.UserManagementSettings.YesIcon : applicationSettings.UserManagementSettings.NoIcon)"></i></td>
							<td>@item.InsertDateTime</td>
							<td>
								<a href="#" class="mx-1 text-danger text-decoration-none">
									<i class="bi bi-pencil-fill"></i>
								</a>
								<a href="#" class="mx-1 text-danger text-decoration-none">
									<i class="bi bi-trash-fill"></i>
								</a>
								<a href="#" class="mx-1 text-danger text-decoration-none">
									<i class="bi bi-zoom-in"></i>
								</a>
							</td>
						</tr>
					}
				</tbody>

				<tfoot class="@(applicationSettings.UserManagementSettings.TableFooterStyle)">
					<tr>
						<td colspan="8">
							<ul class="pagination">
								<li class="page-item @(Model.ViewModel.PageInformation.PageNumber <= 1 ? "disabled" : null )">
									<a class="page-link" asp-page="./Index"
									   asp-route-PageNumber=@(Model.ViewModel.PageInformation.PageNumber - 1)
									   asp-route-PageSize="@(Model.ViewModel.PageInformation.PageSize)">Previous</a>
								</li>

								@if (Model.ViewModel.PageInformation.PageNumber > 1)
								{
									<li class="page-item @(Model.ViewModel.PageInformation.PageNumber <= 1 ? "disabled" : null )">
										<a class="page-link" asp-page="./Index"
									   asp-route-PageNumber=@(Model.ViewModel.PageInformation.PageNumber - 1)
									   asp-route-PageSize="@(Model.ViewModel.PageInformation.PageSize)">@(Model.ViewModel.PageInformation.PageNumber - 1)</a>
									</li>
								}

								<li class="page-item active">
									<a class="page-link" asp-page="./Index" asp-route-PageNumber=@(Model.ViewModel.PageInformation.PageNumber)
									   asp-route-PageSize="@(Model.ViewModel.PageInformation.PageSize)">@(Model.ViewModel.PageInformation.PageNumber)</a>
								</li>

								@if (Model.ViewModel.PageInformation.PageNumber + 1 <= Model.ViewModel.PageInformation.PageCount)
								{
									<li class="page-item @(Model.ViewModel.PageInformation.PageNumber >= Model.ViewModel.PageInformation.PageCount ? "disabled" : null)">
										<a class="page-link" asp-page="./Index" asp-route-PageNumber=@(Model.ViewModel.PageInformation.PageNumber + 1)
									   asp-route-PageSize="@(Model.ViewModel.PageInformation.PageSize)">@(Model.ViewModel.PageInformation.PageNumber + 1)</a>
									</li>
								}

								<li class="page-item @(Model.ViewModel.PageInformation.PageNumber >= Model.ViewModel.PageInformation.PageCount ? "disabled" : null )">
									<a class="page-link" asp-page="./Index" asp-route-PageNumber=@(Model.ViewModel.PageInformation.PageNumber + 1)
									   asp-route-PageSize="@(Model.ViewModel.PageInformation.PageSize)">Next</a>
								</li>
							</ul>
						</td>
					</tr>
				</tfoot>
			</table>

		</div>
	</div>
</div>
